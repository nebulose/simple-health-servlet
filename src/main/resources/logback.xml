<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%boldWhite(%thread)] %highlight(%-5level) %logger - %msg%n%rEx{full,
                org.apache.catalina,
                org.apache.tomcat,
                org.apache.coyote
                }
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>